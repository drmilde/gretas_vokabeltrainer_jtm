<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_voc_foreignLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Foreign"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_voc_nativeLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Native"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_voc_count1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="count1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_voc_count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="count2"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_voc_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tv_voc_unitId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UnitId"
            android:textSize="20sp"
            android:padding="8dp"
            />


    </LinearLayout>


</LinearLayout>